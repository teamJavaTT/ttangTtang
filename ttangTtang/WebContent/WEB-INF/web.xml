<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	version="4.0">
	<display-name>ttangTtang</display-name>
	<resource-ref>
		<description>connection</description>
		<res-ref-name>jdbc/xe</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
	<servlet>
		<servlet-name>ControllerUsingURI</servlet-name>
		<servlet-class>mvc.controller.ControllerUsingURI</servlet-class>
		<init-param>
			<param-name>configFile</param-name>
			<param-value>
           /WEB-INF/commandHandlerURI.properties
        </param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>ControllerUsingURI</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.do</welcome-file>
	</welcome-file-list>
	<servlet>
		<servlet-name>ImageServlet</servlet-name>
		<servlet-class>file.ImageServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ImageServlet</servlet-name>
		<url-pattern>/ImageServlet</url-pattern>
	</servlet-mapping>
	<filter>
		<filter-name>LoginCheck</filter-name>
		<filter-class>filter.LoginCheckFilter</filter-class>
		<init-param>
        <param-name>excludedUrls</param-name>
        <!-- 제외할 url들  -->
        <param-value>/join.do,/idCheck.do,/login.do,/logout.do,/idFind.do,/passwordFind.do,/index.do,/searchProduct.do,/categories.do,/productDetail.do,/adminmain.do,/noticelist.do,/faqlist.do,/faqread.do,/qnalist.do</param-value>
    </init-param>
	</filter>
	<filter-mapping>
		<filter-name>LoginCheck</filter-name>
		<url-pattern>*.do</url-pattern>
	</filter-mapping>
</web-app>